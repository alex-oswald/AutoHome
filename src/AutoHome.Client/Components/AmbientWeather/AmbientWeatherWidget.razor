    {
        var pages = await Client.ListWeatherReadingsAsync(1, 480, CancellationToken.None);
        var reading = pages.Data;
    }
    private ChartOptions a = new ChartOptions();

    private int Index = -1; //default value cannot be 0 -> first selectedindex is 0.

