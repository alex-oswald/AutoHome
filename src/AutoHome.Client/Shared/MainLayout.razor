@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<MudThemeProvider IsDarkMode="true" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudText Typo="Typo.h5" Class="ml-3">AutoHome</MudText>
        <MudSpacer />
        <MudMenu Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit">
            <MudMenuItem Href="">Dashboard</MudMenuItem>
            <MudMenuItem Href="devices">Devices</MudMenuItem>
            <MudMenuItem Href="triggers">Triggers</MudMenuItem>
            <MudMenuItem Href="triggerhistory">Trigger History</MudMenuItem>
            <MudMenuItem Href="weather">Weather</MudMenuItem>
            <MudMenuItem OnClick="@(() => NavigationManager.NavigateTo("swagger", true))">REST API Docs</MudMenuItem>
        </MudMenu>
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
